// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id              Int             @id @default(autoincrement())
  name            String?         @db.VarChar(255)
  email           String          @unique @db.VarChar(255)
  password        String          @unique @db.VarChar(255)
  profilePicUrl   String?
  githubUrl       String?
  linkedinUrl     String?
  personalSiteUrl String?
  selfIntro       String?
  student         Student[]
  adviser         Adviser[]
  mentor          Mentor[]
  administrator   Administrator[]
  facilitator     Facilitator[]
  tutor           Tutor[]
}

model Cohort {
  startDate    DateTime?
  endDate      DateTime?
  academicYear Int           @id
  projects     Project[]
  Student      Student[]
  Adviser      Adviser[]
  Mentor       Mentor[]
  Facilitator  Facilitator[]
  Tutor        Tutor[]
}

model Student {
  id         Int      @id @default(autoincrement())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     Int
  project    Project? @relation(fields: [teamId], references: [id], onDelete: Cascade)
  teamId     Int?
  nusnetId   String?  @unique @db.VarChar(40)
  matricNo   String?  @unique @db.VarChar(40)
  cohort     Cohort   @relation(fields: [cohortYear], references: [academicYear])
  cohortYear Int

  @@unique([userId, cohortYear])
}

model Adviser {
  id         Int       @id @default(autoincrement())
  user       User      @relation(fields: [userId], references: [id])
  userId     Int
  projects   Project[]
  cohort     Cohort    @relation(fields: [cohortYear], references: [academicYear])
  cohortYear Int

  @@unique([userId, cohortYear])
}

model Mentor {
  id         Int       @id @default(autoincrement())
  user       User      @relation(fields: [userId], references: [id])
  userId     Int
  projects   Project[]
  cohort     Cohort    @relation(fields: [cohortYear], references: [academicYear])
  cohortYear Int

  @@unique([userId, cohortYear])
}

model Facilitator {
  id         Int    @id @default(autoincrement())
  user       User   @relation(fields: [userId], references: [id])
  userId     Int
  cohort     Cohort @relation(fields: [cohortYear], references: [academicYear])
  cohortYear Int

  @@unique([userId, cohortYear])
}

model Tutor {
  id         Int    @id @default(autoincrement())
  user       User   @relation(fields: [userId], references: [id])
  userId     Int
  cohort     Cohort @relation(fields: [cohortYear], references: [academicYear])
  cohortYear Int

  @@unique([userId, cohortYear])
}

model Administrator {
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  startDate DateTime
  endDate   DateTime

  @@id([userId, startDate, endDate])
}

model Project {
  id           Int              @id @default(autoincrement())
  name         String
  students     Student[]
  adviser      Adviser?         @relation(fields: [adviserId], references: [id])
  adviserId    Int?
  mentor       Mentor?          @relation(fields: [mentorUserId], references: [id])
  mentorUserId Int?
  achievement  AchievementLevel
  cohort       Cohort           @relation(fields: [cohortYear], references: [academicYear])
  cohortYear   Int
  milestones   Milestone[]
}

enum AchievementLevel {
  Vostok
  Gemini
  Apollo
  Artemis
}

model Milestone {
  milestoneNo Int
  project     Project @relation(fields: [projectId], references: [id])
  projectId   Int
  videoUrl    String
  posterUrl   String
  logUrl      String
  readmeUrl   String

  @@id([milestoneNo, projectId])
}
